<Window x:Class="kinevetavegen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kinevetavegen"
        mc:Ignorable="d"
        Title="'Ki nevet a végén?' by Gyalog Patrik" Height="800" Width="800">
    <Grid Name="gameGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="15" BorderBrush="Black" BorderThickness="0,2,0,0"/>
        <Button Content="Dobok!" Grid.Column="12" Grid.Row="15" Grid.ColumnSpan="2" Click="Dice_Click"/>
        <Label  Content="" Name="throwLabel" Grid.Column="11" Grid.Row="15"></Label>
        <Button Content="Új bábút  hozok ki!" Grid.Column="3" Grid.Row="15" Grid.ColumnSpan="2" Click="addNewPiece_Click"/>
        <Polygon Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center" Points="0,0 10,7, 0,12" Stroke="Black" Fill="Red" />
        <Polygon Grid.Column="8" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Points="0,0 5,10, 10,0" Stroke="Black" Fill="Blue" />
        <Polygon Grid.Column="12" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Center" Points="8,0 0,5, 8,10" Stroke="Black" Fill="Green" />
        <Polygon Grid.Column="6" Grid.Row="12" VerticalAlignment="Center" HorizontalAlignment="Center" Points="5,0 10,10, 0,10" Stroke="Black" Fill="Yellow" />
        <Rectangle Fill="Red" Grid.Column="1" Grid.Row="15"/>
    </Grid>
</Window>
